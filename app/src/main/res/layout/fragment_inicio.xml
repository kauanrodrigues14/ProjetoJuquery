<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioFragment"
    android:background="@color/corFundo">



                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-200dp"
                    android:background="@drawable/fundo_linearlayout">



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="@drawable/cadastro_fundo">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/carme"
                                android:text="ALERTAS"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </FrameLayout>


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:translationZ="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingBottom="200dp">



                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewAlertas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />



                    </LinearLayout>
                    </ScrollView>
                </FrameLayout>


                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/fundo_linearlayout">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/cadastro_fundo">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/carme"
                        android:text="ADMINISTRADOR"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </FrameLayout>
                    <EditText
                        android:id="@+id/edtLoginAdm"
                        android:layout_width="270dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-25dp"
                        android:background="@drawable/textbox_borda"
                        android:ems="10"
                        android:fontFamily="@font/carme"
                        android:hint="Login"
                        android:textAlignment="center"
                        android:inputType="text"


                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/edtSenhaAdm"
                        android:layout_width="270dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/textbox_borda"
                        android:fontFamily="@font/carme"
                        android:hint="Senha"
                        android:inputType="textPassword"
                        android:textAlignment="center"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btnLoginAdm"
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:layout_marginTop="100dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#1A4D2E"
                        android:fontFamily="@font/carme"
                        android:text="LOGIN"
                        android:textColor="@color/white" />

                </FrameLayout>






</FrameLayout>