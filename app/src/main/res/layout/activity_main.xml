<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="350dp"
        android:layout_height="570dp"
        android:layout_centerInParent="true"
        android:background="@drawable/quadrado_fundo"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText"
            android:layout_width="202dp"
            android:layout_height="45dp"
            android:layout_above="@+id/edtSenha"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/textbox_borda"
            android:backgroundTintMode="src_in"
            android:gravity="center"
            android:hint="Insira seu Login..."
            android:padding="10dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_above="@+id/btnLogar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="33dp"
            android:background="@drawable/textbox_borda"
            android:ems="20"
            android:gravity="center"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtCadastro"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="11dp"
            android:text="@string/strCadastro"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#4A7509"
            android:textIsSelectable="true"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnLogar"

            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtCadastro"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="39dp"
            android:backgroundTint="#1A4D2E"
            android:text="LOGIN"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="201dp"
            android:layout_height="168dp"
            android:layout_above="@+id/editText"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="21dp"
            app:srcCompat="@drawable/logo" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>